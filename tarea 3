from igraph import *
from numpy import *
from matplotlib import *
from json import loads

with open("CIAC.json") as of:
        data=loads(of.readline())

def likes_comments(data):

	usuariosLdict = dict()
	usuariosCdict = dict()


	for i in data:
	    for k,o in i.items():
	            if k=="likes":
	                temp=o["data"]
	                for j in temp:
	                    temp3=j["id"]
	                    usuariosL.append(temp3)
	                    if temp3 in usuariosLdict.keys():
	                    	usuariosLdict[temp3]+=1
	                    else:
	                    	usuariosLdict[temp3]=1
	            elif k == "comments":
	                temp2=o["data"]
	                for g in temp2:
	                    temp4=g["from"]
	                    temp5 = temp4.items()
	                    for x in temp5:
	                    	if x[0] == "id":
	                    		usuariosC.append(x[1])
	                    	else:
	                    		continue
	                    	if x[1] in usuariosCdict.keys():
	                    		usuariosCdict[x[1]]+=1
	                    	else:
	                    		usuariosCdict[x[1]]=1


